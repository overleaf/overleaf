#! env bash

grep 'name:' config/services.js | \
	sed 's/.*name: "\(.*\)",/\1/' | \
	while read service
	do
		pushd $service &&
		echo "Installing Service $service" &&
		echo '  installing Node' &&
		nvm install &&
		nvm use &&
		echo '  installing Dependencies' &&
		npm install &&
		grunt install
		popd
	done
