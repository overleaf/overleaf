#! env bash

set -e

grep 'name:' config/services.js | \
	sed 's/.*name: "\(.*\)",/\1/' | \
	while read service
	do
		pushd $service
		echo "Compiling Service $service"
		case $service in 
			web)
				make compile_full
				make minify
				npm run webpack:production
				;;
			chat)
				echo "$service doesn't require a compilation"
				;;	
			*)
				npm run compile:all
				;;
		esac	
		popd
	done
